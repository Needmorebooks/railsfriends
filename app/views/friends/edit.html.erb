<h1 class="mb-3">Editing friend</h1>

<%= render "form", friend: @friend %>

<br>

<div class="d-flex">
  <%= link_to "Show this friend", @friend, class:"btn btn-secondary" %> |
  <%= button_to 'Delete', @friend, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-danger mx-1" %> |
  <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
</div>
