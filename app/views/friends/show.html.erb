<div class="p-5 mb-4 bg-light rounded-3">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.twitter %>

  </p>
  <br/>

  <div class="d-flex" data-controller="friend">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary mx-1" %>
    <%= button_to 'Delete', @friend, method: :delete, data: { action: "click->friend#delete" }, class: "btn btn-danger mx-1" %>
    <%= link_to 'Back', friends_path, class:"btn btn-dark mx-1" %>
  </div>

</div>
